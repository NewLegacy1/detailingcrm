# Copy this file to .env and fill in your values
# cp .env.example .env

# Required: your OpenAI API key
OPENAI_API_KEY=sk-...

# Optional: cron schedule (default: 8 AM daily)
# See https://crontab.guru for format help
BLOG_CRON_SCHEDULE=0 8 * * *

# Optional: timezone for the scheduler (default: America/New_York)
# Examples: America/Chicago, America/Los_Angeles, America/Denver, Europe/London
BLOG_TIMEZONE=America/New_York

# Optional: run generator immediately when scheduler starts (default: false)
BLOG_RUN_ON_START=false
